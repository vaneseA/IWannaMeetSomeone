<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.MyPageActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_profile_set_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnanche"
            android:text="내 프로필"
            android:textColor="@color/maincolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:fontFamily="@font/jalnanche"
            android:text="저장"
            android:textColor="@color/maincolor"
            android:textSize="16sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/myProfileImg"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/toolbar_profile_set_activity"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:src="@mipmap/ic_launcher" />

    <ImageView

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@id/myProfileImg"
        android:layout_alignBottom="@id/myProfileImg"
        android:src="@drawable/camera" />

    <EditText
        android:id="@+id/myNicknameEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myProfileImg"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text_create_activity"
        android:ems="10"
        android:hint="닉네임"
        android:padding="10dp"
        android:privateImeOptions="defaultInputmode=korean" />

    <RadioGroup
        android:id="@+id/radio_group_profile_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/myNicknameEdt"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/myNicknameEdt"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbProfileSet_Male"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radionbutton_male"
            android:button="@android:color/transparent"
            android:checked="true"
            android:ems="4"
            android:fontFamily="@font/jalnanche"
            android:gravity="center"
            android:text="남자"
            android:textColor="@color/selector_text_color_radiobutton" />

        <RadioButton
            android:id="@+id/rbProfileSet_Female"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radionbutton_female"
            android:button="@android:color/transparent"
            android:ems="4"
            android:fontFamily="@font/jalnanche"
            android:gravity="center"
            android:padding="4dp"
            android:text="여자"
            android:textColor="@color/selector_text_color_radiobutton" />
    </RadioGroup>

    <TextView
        android:id="@+id/myBirth"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/myNicknameEdt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text_create_activity"
        android:clickable="true"
        android:ems="11"
        android:gravity="center_vertical"
        android:hint="생년월일"
        android:padding="10dp" />

    <TextView
        android:id="@+id/myLocation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/myNicknameEdt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/myBirth"
        android:background="@drawable/bg_edit_text_create_activity"
        android:clickable="true"
        android:ems="11"
        android:gravity="center_vertical"
        android:hint="지역"
        android:padding="10dp" />

    <EditText
        android:id="@+id/myMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myBirth"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_edit_text_create_activity"
        android:gravity="top"
        android:hint="상태 메세지"
        android:lines="4"
        android:maxLength="50"
        android:maxLines="4"
        android:padding="10dp"
        android:privateImeOptions="defaultInputmode=korean" />

    <TextView
        android:id="@+id/message_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/myMessage"
        android:layout_alignBottom="@id/myMessage"
        android:layout_margin="4dp"
        android:text="1/50자"
        android:textColor="#ff888888" />

</RelativeLayout>
